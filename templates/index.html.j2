{% extends "daddy.html.j2" %}
{% block content %}
{% for picture in pictures %}
        <h2 id={{ picture.title }}><a href="#{{ picture.title }}" class="hideme">{{ picture.title }}</a></h2>
        <a href="{{ picture.html_path }}.html">
        <img src="{{ picture.small_path }}" alt="{{ picture.title }}">
        </a>
{% include "exif.html.j2" %}
        <a href="{{ siteurl }}/{{ picture.html_path }}.html">Permalink</a>
        <a href="{{ picture.path }}">Full quality</a>

{% endfor %}

<p>
{% if pagination.previous is defined %}
{% if pagination.previous == 0 %}
<a href="index.html">previous page</a>
{% else %}
<a href="index{{ pagination.previous }}.html">previous page</a>
{% endif %}
{% endif %}
{% if pagination.next %}
<a href="index{{ pagination.next }}.html">next page</a>
{% endif %}
(you're currently page {{ pagination.current }} out of {{ pagination.total }} pages).
</p>
{% endblock %}
